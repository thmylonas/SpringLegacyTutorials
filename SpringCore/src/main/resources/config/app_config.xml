       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- spring_dependency_injection -->

    <bean id="dependencyInjectionByConstructorsTutorial"
          class="com.thomasmylonas.spring_core.spring_dependency_injection.DependencyInjectionByConstructorsTutorial">
